@using PharmaciesManagement.ViewModels;
@model PurchaseViewModel

@{
    ViewData["Title"] = "إنشاء مشتريات";
}
<h2>@(Model.Id > 0 ? "تعديل" : "إنشاء") مشتريات</h2>
<hr />
<section class="row">
    <div class="col-md-4">
        <form method="Post" asp-action="@(Model.Id > 0 ? "Edit" : "Create")">
            <input type="hidden" asp-for="Id" />
             <div class="form-group">
                <label class="text-muted" asp-for="Date"></label>
                <input type="text" value="@DateTime.Now" readonly="readonly" class="form-control" asp-for="Date" maxlength="250" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="text-muted" asp-for="StoreId"></label>
                <select class="form-control" asp-for="StoreId" asp-items="@(new SelectList(Model.Stores, "Id", "Branch"))">
                    <option></option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-muted" asp-for="ItemId"></label>
                <select class="form-control" asp-for="ItemId" asp-items="@(new SelectList(Model.Items, "Id", "Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="ItemId" title="المنتج مطلوب" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label class="text-muted" asp-for="Quantity"></label>
                <input type="number" class="form-control" asp-for="Quantity" maxlength="250"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
                
            </div>
             <div class="form-group">
                <label class="text-muted">الرصيد</label>
                <input type="text" class="form-control" id="Balance" disabled="disabled" maxlength="250" />
            </div>
           
            <button type="submit" class="btn btn-primary mt-4">
                <i class="bi bi-check"></i>
                حفظ
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary mt-4">
                <i class="bi bi-x"></i>
                إلغاء
            </a>            
        </form>

    </div>
