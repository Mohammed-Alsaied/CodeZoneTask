@using PharmaciesManagement.Models;
@model IEnumerable<Item>
@{
    ViewData["Title"] = "الأصناف";
}
<div dir="rtl">
    <h2 dir="rtl">
    <i class="bi bi-shop"></i>
    الأصناف
</h2>
<hr />
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus" dir="rtl"></i>
    إضافة صنف</a>
    <div class="mt-4" dir="rtl">
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            لا يوجد أصناف!
        </div>
    }
    else
    {
        @foreach (var store in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@store.Name</h5>
                    <br>
                    <a asp-action="Edit" asp-route-id="@store.Id" class="btn btn-outline-primary card-link"><i class="bi bi-pencil"></i>
                        تعديل
                    </a>
                        <a href="javascript:;" class="btn btn-danger js-delete-item" data-id="@store.Id">
                            <i class="bi bi-trash"></i>
                            حذف
                     </a>
                </div>

            </div>
        }
    }
</div>
</div>

